    mixin Cart-table__item(img,index,index2)
      tr.row.p-0(style="margin: 0px auto;")
        td.cart--table__space.col-lg-2
          img(src=img)
        td.cart--table__space.col-lg-3 Lắc tay D&G
        td.cart--table__space.col-lg-2.bold= index
          | .000
          sup đ
        td.cart--table__space.col-lg-2= index2
        td.cart--table__space.col-lg-2.bold= index*index2
          | .000
          sup đ
        td.cart--table__space.col-lg-1
          a(href='#')
            i.fa.fa-trash-o
    +Cart-table__item('images/hand1.png',345,1)
    +Cart-table__item('images/hand1.png',345,2)
